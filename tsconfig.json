{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "noResolve": false,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "types/**/*.d.ts"
  ]
}