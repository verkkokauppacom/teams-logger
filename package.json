{
    "name": "@verkkokauppacom/teams-logger",
    "version": "2.2.1",
    "description": "Send messages to Microsoft Teams via a custom incoming webhook",
    "author": "Iiro JÃ¤ppinen <iiro.jappinen@verkkokauppa.com>",
    "license": "MIT",
    "repository": "github:verkkokauppacom/teams-logger",
    "bugs": "https://github.com/verkkokauppacom/teams-logger/issues",
    "main": "index.js",
    "engines": {
        "node": ">= 10"
    },
    "bin": {
        "teams-logger": "bin/teams-logger.js"
    },
    "files": [
        "bin/teams-logger.js",
        "lib/*.js"
    ],
    "scripts": {
        "lint": "prettier --check **/*.js",
        "test": "nyc -r=lcov -r=text-summary tape test/**/*.spec.js",
        "version": "standard-version --no-verify"
    },
    "nyc": {
        "all": true,
        "check-coverage": true
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json}": "prettier --write"
    },
    "standard-version": {
        "scripts": {
            "prerelease": "npm run lint && npm test"
        }
    },
    "dependencies": {
        "got": "^11.8.1",
        "pipe-args": "^1.3.0",
        "yargs": "^16.2.0"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^11.0.0",
        "commitlint": "^11.0.0",
        "execa": "^5.0.0",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "nyc": "^15.1.0",
        "prettier": "^2.2.1",
        "sinon": "^9.2.4",
        "standard-version": "^9.1.1",
        "tape": "^5.1.1",
        "testdouble": "^3.16.1"
    },
    "keywords": [
        "Connector",
        "Incoming Webhook",
        "Markdown",
        "Message",
        "Microsoft Teams",
        "Microsoft",
        "Office 365 Connector",
        "Teams",
        "Webhook"
    ]
}
