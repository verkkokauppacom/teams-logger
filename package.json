{
    "name": "@verkkokauppacom/teams-logger",
    "version": "2.0.0",
    "description": "Send messages to Microsoft Teams via a custom incoming webhook",
    "author": "Iiro JÃ¤ppinen <iiro.jappinen@verkkokauppa.com>",
    "license": "MIT",
    "repository": "github:verkkokauppacom/teams-logger",
    "bugs": "https://github.com/verkkokauppacom/teams-logger/issues",
    "main": "index.js",
    "engines": {
        "node": ">= 10"
    },
    "bin": {
        "teams-logger": "bin/teams-logger.js"
    },
    "files": [
        "bin/teams-logger.js",
        "lib/*.js"
    ],
    "scripts": {
        "lint": "prettier --check **/*.js",
        "test": "nyc -r=lcov -r=text-summary tape test/**/*.spec.js",
        "version": "standard-version --no-verify"
    },
    "nyc": {
        "all": true,
        "check-coverage": true
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json}": "prettier --write"
    },
    "standard-version": {
        "scripts": {
            "prerelease": "npm run lint && npm test"
        }
    },
    "dependencies": {
        "pipe-args": "^1.3.0",
        "request": "^2.88.2",
        "request-promise": "^4.2.5",
        "yargs": "^15.3.1"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^8.3.4",
        "commitlint": "^8.3.5",
        "execa": "^4.0.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.1.2",
        "nyc": "^15.0.1",
        "prettier": "^2.0.4",
        "sinon": "^9.0.1",
        "standard-version": "^8.0.1",
        "tape": "^4.13.2",
        "testdouble": "^3.13.1"
    },
    "keywords": [
        "Connector",
        "Incoming Webhook",
        "Markdown",
        "Message",
        "Microsoft Teams",
        "Microsoft",
        "Office 365 Connector",
        "Teams",
        "Webhook"
    ]
}
