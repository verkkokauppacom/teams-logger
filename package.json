        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.3.1",
        "execa": "^5.0.0",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "nyc": "^15.1.0",
        "prettier": "^2.2.1",
        "sinon": "^9.2.4",
        "standard-version": "^9.1.1",
